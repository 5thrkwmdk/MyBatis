<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.namoo.mybatis.mapper.AuthorMapper">
	
	<sql id="author_columns">
		author_id AS id,
		author_nm AS name,
		author_emil AS email
	</sql>
	
	<!-- java.lang.String => string(aliasing 돼있음) -->
	<select id="selectAuthor" parameterType="string" resultType="Author" >
	
	SELECT
		<include refid="author_columns"/>
	FROM author_tb
	WHERE author_id = #{authorId};
	
	</select>
	
	<select id="selectAllAuthors" flushCache="false" resultType="Author" >
	
	SELECT
		<include refid="author_columns"/>
	FROM author_tb
	
	</select>
	
	<insert id="insertAuthor" parameterType="Author">
	INSERT INTO author_tb(
		author_id
		, author_nm
		, author_emil
	) VALUES (
		#{id}
		, #{name}
		, #{email}
	)
	</insert>
	
	<update id="updateAuthor" parameterType="Author">
	UPDATE author_tb
	SET
		author_nm = #{name}
		, author_emil = #{email}
	WHERE author_id = #{id}
	</update>
	
	<delete id="deleteAuthor" parameterType="string">
	DELETE from author_tb WHERE author_id = #{authorId}
	</delete>
	
</mapper>